{
	"name": "react-native-nitro-palette",
	"private": true,
	"version": "1.1.1",
	"repository": "https://github.com/ucekay/react-native-nitro-palette.git",
	"author": "Ucekay",
	"scripts": {
		"bootstrap": "bun --filter=\"**\" install && bun tsc && bun --filter=\"example\" pods",
		"typescript": "bun --filter=\"**\" typescript",
		"release": "release-it"
	},
	"workspaces": [
		"react-native-nitro-palette",
		"example"
	],
	"devDependencies": {
		"@jamesacarr/eslint-formatter-github-actions": "^0.2.0",
		"@release-it/bumper": "^6.0.1",
		"@release-it/conventional-changelog": "^8.0.1",
		"release-it": "^17.6.0"
	},
	"release-it": {
		"npm": {
			"publish": false
		},
		"git": {
			"commitMessage": "chore: release ${version}",
			"tagName": "v${version}",
			"requireCleanWorkingDir": false
		},
		"github": {
			"release": true
		},
		"plugins": {
			"@release-it/conventional-changelog": {
				"preset": {
					"name": "conventionalcommits",
					"types": [
						{
							"type": "feat",
							"section": "✨ Features"
						},
						{
							"type": "perf",
							"section": "💨 Performance Improvements"
						},
						{
							"type": "fix",
							"section": "🐛 Bug Fixes"
						},
						{
							"type": "chore(deps)",
							"section": "🛠️ Dependency Upgrades"
						},
						{
							"type": "docs",
							"section": "📚 Documentation"
						}
					]
				}
			}
		}
	},
	"dependencies": {
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.2.1",
		"prettier": "^3.4.1"
	},
	"packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
